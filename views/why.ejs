================================================== -->
    <section class="company-description">
        <div class="container">
            <div class="row">
                <div class="col-md-6 wow fadeInLeft" data-wow-delay=".3s">
                    <img src="images/about/about-company.jpg" style=" border-radius: 25px;" alt="" class="img-fluid">
